<configuration>
    <contextName>gengine-gateway</contextName>

    <!--
    Это конфигурация для разработки. В ней указаны цвета в логе (требует указания spring.output.ansi.enabled=always в переменных окружения)
    LOG_PATH установлена в "./logs". Если нужно другое место, то нужно явно задать LOG_PATH
    Если надо указать имя файла, то надо задать LOG_FILE - в нем указывается файл с путем к нему. В этом случае LOG_PATH задавать не нужно
    root logger имеет уровень INFO
    "ru.vit.scp" имеет уровень DEBUG, поэтому указывать нужно только те пакеты, которые будут отличаться по уровню критичности
    -->
    <!-- Для того, чтобы цвете работали необходимо установить переменную окружения spring.output.ansi.enabled=always -->
    <property name="CONSOLE_LOG_PATTERN" value="${CONSOLE_LOG_PATTERN:-%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}} %clr(%5p) [${CONTEXT_NAME},%X{traceId:-},%X{spanId:-}] %clr(${PID:-No}){faint} %clr([%20t]){blue} %clr(%-45logger{40}){yellow} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}"/>
    <property name="FILE_LOG_PATTERN" value="${FILE_LOG_PATTERN:-%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}} %5p [${CONTEXT_NAME},%X{traceId:-},%X{spanId:-}] ${PID:-No} [%t] %-45logger{40} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}"/>
    <property name="LOG_PATH" value="${LOG_PATH:-./logs}"/>

    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <logger name="ru.gurkin.gengine" level="DEBUG"/>

</configuration>